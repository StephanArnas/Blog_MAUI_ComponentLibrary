<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ccl="clr-namespace:Blog_MAUI_Components.MAUI.CustomControls.Labels;assembly=Blog_MAUI_Components.MAUI"
             xmlns:ccbl="clr-namespace:Blog_MAUI_Components.MAUI.CustomControlsBasic.Labels;assembly=Blog_MAUI_Components.MAUI"
             Title="Entry"
             x:Class="Blog_MAUI_Components.Presentation.Pages.Entry.EntryPage">
    
    <ScrollView>
        <VerticalStackLayout
            Margin="16, 32"
            Spacing="25">
            
            <Label
                Text="Below is a basic entry custom control using Border for border styling" />

            <ccbl:EntryLabelBasic
                Label="First name or Last name"
                IsRequired="False"
                Placeholder="Enter your first name" />
            
            <Label
                Text="Below is a basic entry custom control using SkiaSharp for border styling" />

            <ccl:EntryLabel
                Label="First name or Last name"
                IsRequired="False"
                Placeholder="Enter your first name" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>