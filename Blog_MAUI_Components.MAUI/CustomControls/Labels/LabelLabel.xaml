<?xml version="1.0" encoding="utf-8"?>
<base:LabelBase 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:Blog_MAUI_Components.MAUI.CustomControls.Labels.Base"
    x:Class="Blog_MAUI_Components.MAUI.CustomControls.Labels.LabelLabel">
    
    <base:LabelBase.Resources>
        <Style x:Key="LabelLabelLabel" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="{StaticResource Gray950}" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalOptions" Value="StartAndExpand" />
            <Setter Property="MinimumHeightRequest" Value="40" />
        </Style>
    </base:LabelBase.Resources>
    
    <base:LabelBase.View>
        <Label x:Name="Element" 
               Style="{StaticResource LabelLabelLabel}" />
    </base:LabelBase.View>
</base:LabelBase>