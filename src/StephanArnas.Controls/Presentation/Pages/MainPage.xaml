<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:page="clr-namespace:StephanArnas.Controls.Presentation.Pages"
             x:DataType="page:MainPageViewModel"
             x:Class="StephanArnas.Controls.Presentation.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Margin="32"
            Spacing="25">
            
            <Button
                Text="Button Demo" 
                Command="{Binding GoToButtonPageCommand}"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Entry Demo" 
                Command="{Binding GoToEntryPageCommand}"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Picker Demo" 
                Command="{Binding GoToPickerPageCommand}"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Picker with popup Demo" 
                Command="{Binding GoToPickerPopupPageCommand}"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
