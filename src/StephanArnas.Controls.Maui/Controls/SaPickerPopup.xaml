<?xml version="1.0" encoding="utf-8"?>

<common:LabelBase 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:StephanArnas.Controls.Maui.Common"
    x:Class="StephanArnas.Controls.Maui.CustomControls.Labels.SaPickerPopup">
    
    <common:LabelBase.Resources>
        <Style x:Key="LabelLabel" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="{StaticResource Gray950}" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalOptions" Value="StartAndExpand" />
            <Setter Property="MinimumHeightRequest" Value="40" />
        </Style>
    </common:LabelBase.Resources>
    
    <common:LabelBase.View>
        <Label 
            Style="{StaticResource LabelLabel}" 
            x:Name="Element" />
    </common:LabelBase.View>
</common:LabelBase>